<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:background">@drawable/border_radius_button</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">1.25em</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="TextAppearance.Design.Counter">
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="AppTheme.TextInputLayout.Normal" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.TextInputLayout.Error" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="AppTheme.H1">
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-1.5em</item>
    </style>

    <style name="AppTheme.H2">
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.5em</item>
    </style>

    <style name="AppTheme.H3">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0em</item>
    </style>

    <style name="AppTheme.H4">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.25em</item>
    </style>

    <style name="AppTheme.H5">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0em</item>
    </style>

    <style name="AppTheme.H6">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.15em</item>
    </style>
    
    <style name="AppTheme.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.15em</item>
    </style>

    <style name="AppTheme.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.1em</item>
    </style>

    <style name="AppTheme.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.5em</item>
    </style>

    <style name="AppTheme.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.25em</item>
    </style>

    <style name="AppTheme.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.4em</item>
    </style>

    <style name="AppTheme.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">1.5em</item>
    </style>
</resources>
