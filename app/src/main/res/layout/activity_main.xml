<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputUsername_Login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:errorEnabled="true"
            android:paddingTop="10dp"
            app:counterOverflowTextAppearance="@style/AppTheme.TextInputLayout.Error"
            app:counterTextAppearance="@style/AppTheme.TextInputLayout.Normal"
            style="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de usuario" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputPassword_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/inputUsername_Login"
            app:errorEnabled="true"
            android:paddingTop="10dp"
            app:counterOverflowTextAppearance="@style/AppTheme.TextInputLayout.Error"
            app:counterTextAppearance="@style/AppTheme.TextInputLayout.Normal"
            style="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Contraseña" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/logear"
            style="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/inputPassword_login"
            android:text="Iniciar sesión" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="57dp"
        android:text="TextView" />

</RelativeLayout>